<Project>
    <PropertyGroup>
        <VersionPrefix>0.0.2</VersionPrefix>
        <PackageProjectUrl>https://github.com/StefH/JsonConverter</PackageProjectUrl>
        <ProjectUrl>https://github.com/StefH/JsonConverter</ProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryType>git</RepositoryType>
        <LangVersion>10</LangVersion>
        <Nullable>enable</Nullable>
        <GlobalUsings>false</GlobalUsings>
        <Authors>Stef Heyenrath</Authors>
        <Copyright>Copyright Â© Stef Heyenrath</Copyright>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <PropertyGroup Condition="'$(Configuration)' == 'Release'">
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>
</Project>